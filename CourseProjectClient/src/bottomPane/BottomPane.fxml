<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="bottomPane" alignment="CENTER" prefHeight="62.0" prefWidth="600.0" stylesheets="@../mainPane/style.css"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bottomPane.BottomPaneController">
    <children>
        <JFXButton fx:id="btnAdd" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" layoutX="199.0" layoutY="5.0"
                   minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#addEntry"
                   prefHeight="52.0" prefWidth="52.0" text="Додати" AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="5.0">
            <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/add.png"/>
                    </image>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </JFXButton>
        <JFXButton fx:id="btnEdit" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" layoutX="274.0" layoutY="10.0"
                   minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#editEntry"
                   prefHeight="52.0" prefWidth="52.0" text="Редагувати" AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="274.0" AnchorPane.topAnchor="5.0">
            <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/edit.png"/>
                    </image>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </JFXButton>
        <JFXButton fx:id="btnDelete" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" layoutX="348.0" layoutY="5.0"
                   minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#deleteEntry"
                   prefHeight="52.0" prefWidth="52.0" text="Видалити" AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="348.0" AnchorPane.topAnchor="5.0">
            <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/delete.png"/>
                    </image>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </JFXButton>
    </children>
</HBox>
